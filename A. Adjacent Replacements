import java.util.Scanner;

public class HelloWorld {
    
    static Scanner in=new Scanner(System.in);
    
    static int n;
    
    public static void main(String args[]) {
    
    n=in.nextInt();
     
     for(int i=0;i<n;i++){
         
         long a=in.nextLong();
         
         if(a%2==1){
             
             System.out.print(a+" ");
             
         }else{
             
             System.out.print((a-1)+" ");
             
         }
         
     }
      
    }
}
