import java.util.Scanner;

public class MyClass {
    
    static Scanner in=new Scanner(System.in);
    
    public static void main(String args[]) {
     
     int n=in.nextInt();
     
     int m=in.nextInt();
     
     int a=in.nextInt();
     
     int b=in.nextInt();
     
     int ans=Math.min( Math.min(a*n,b*(n/m)+a*(n%m)),b*((n+m-1)/m) );
     
     System.out.print(ans);
     
    }
}
