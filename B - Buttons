//package Points1000;

import java.util.*;

public class Buttons {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		
		int totalCount = 0;
		
		for(int i=1;i<=n;i++)
			totalCount += i*(n-i);
		
		totalCount += n;
		
		System.out.println(totalCount);
	}

}
