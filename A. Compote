import java.util.*;
public class Compote {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int a = scan.nextInt();
		scan.nextLine();
		int b = scan.nextInt();
		scan.nextLine();
		int c = scan.nextInt();
		while(b < 2*a || c < 4*a) {
			a--;
		}
		System.out.println(7*a);
	}

}
