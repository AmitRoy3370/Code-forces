import java.util.Scanner;

public class MyClass {
    
    static Scanner in=new Scanner(System.in);
    
    static int n;
    
    static long a[];
    
    public static void main(String args[]) {
     
     n=in.nextInt();
     
     a=new long[n];
     
     for(int i=0;i<n;i++){
         
         a[i]=in.nextLong();
         
     }
     
     int ans=0;
    
    while(n>=1){
        
        n/=2;
        
        ans++;
        
    }
    
     System.out.println(ans);
     
    }
}
