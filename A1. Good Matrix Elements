import java.util.Scanner;

public class Main
{
    
    static Scanner in=new Scanner(System.in);
    
	public static void main(String[] args) {
		
		int n=in.nextInt();
		
		int a[][]=new int[n][n];
		
		for(int i=0;i<n;i++){
		    
		    for(int j=0;j<n;j++){
		        
		        a[i][j]=in.nextInt();
		        
		    }
		    
		}
		
		int sum=0;
		
		for(int i=0;i<n;i++){
		    
		    sum+=a[i][i];
		    
		}
		
		int y=n-1;
		
		for(int i=0;i<n;i++){
		    
		    sum+=a[i][y--];
		    
		}
		
		for(int i=0;i<n;i++){
		    
		    sum+=a[(n-1)/2][i];
		    
		}
		
		for(int i=0;i<n;i++){
		    
		    sum+=a[i][(n-1)/2];
		    
		}
		
		sum-=3*a[(n-1)/2][(n-1)/2];
		
		System.out.println(sum);
		
	}
}
