import java.util.Scanner;
import java.util.Arrays;

public class Main{
    
    static Scanner in=new Scanner(System.in);
    
    public static void main(String[] amit){
      
      int n=in.nextInt();
      
      int x=0;
        
        for(int i=0;i<n;i++){
            
            String s=in.next();
            
            if( s.startsWith("++") || s.endsWith("++") ){
                
                x++;
                
            }else{
                
                x--;
                
            }
            
        }
        
        System.out.print(x);
        
    }
    
}
