import java.util.Scanner;

public class A_Wizard_of_Orz{
	
	static Scanner in=new Scanner(System.in);
	
	static int n;
	
	static String s[];
	
	static void solve(){
		
		int count=1,i=0;
		
	for( i=1;i<n;i++){
	    
	    if( (s[i-1]).equals(s[i]) ){
	        
	    //count++;
	    
	    }else{
	        
	        count++;
	        
	      //  break;
	        
	    }
	    
	}
		
		System.out.println(count);
		
	}
	
	public static void main(String[] args){
		
		n=in.nextInt();
		
		s=new String[n];
		
		for(int t=0;t<n;t++){
			
			s[t]=in.next().trim();
			
		//	solve();
			
		}
		
		solve();
		
	}
	
}
